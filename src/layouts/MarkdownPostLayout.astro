---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;


// Formatear la fecha de manera segura
const formattedDate = frontmatter.pubDate instanceof Date 
  ? frontmatter.pubDate.toISOString().slice(0,10)
  : new Date(frontmatter.pubDate).toISOString().slice(0,10);
---

<BaseLayout pageTitle={frontmatter.title}>
  <article class="blog-post">
    <p class="publish-date">{formattedDate}</p>
    <p class="description"><em>{frontmatter.description}</em></p>
    <p class="author">Written by: {frontmatter.author}</p>
    {frontmatter.image && (
      <img 
        src={frontmatter.image.url} 
        width="300" 
        alt={frontmatter.image.alt || `Image for ${frontmatter.title}`} 
      />
    )}

<div class="tags">
  {frontmatter.tags.map((tag: string) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
  ))}
</div>

    <slot />
  </article>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>